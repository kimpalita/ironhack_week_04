<div class="container">

<h1>New Concert Form</h1>

<% if @concert.errors.any? %>
	<ul class="error-messages">
		<% @concert.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>	
	</ul>
<% end %>

<%= form_for [@concert] do |f| %>
	<%= f.label :date %>
	<%= f.date_field :date, class: "date" %>

	<%= f.label :band %>
	<%= f.text_field :band %>

	<%= f.label :city_id, "City" %>
	<%= f.collection_select(:city_id, City.all, :id, :city_name) %>

	<%= f.label :venue %>
	<%= f.text_field :venue %>

	<%= f.label :price %>
	<%= f.text_field :price %>

	<%= f.label :description %>
	<%= f.text_area :description, rows: 4, cols: 80 %>

	<%= f.submit('Add Concert') %>
<% end %>

<%= link_to "Cancel", concerts_path, title: "Cancel" %>

</div>