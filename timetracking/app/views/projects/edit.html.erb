<% if @project.errors.any? %>
	<ul>
		<% @project.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>	
	</ul>
<% end %>

<%= form_for @project do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_area :description, rows: 5, cols: 80 %>
	<%= f.submit 'Save changes', class: 'button' %>
<% end %>
<%= button_to "Cancel", projects_path, :method => "get", title: "Cancel create new project" %>