<% if @entry.errors.any? %>
	<ul>
		<% @entry.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>	
	</ul>
<% end %>

<%= form_for [@project, @entry] do |f| %>
	<%= f.label :date %>
	<%= f.date_field :date, class: "date" %>

	<%= f.label :hours %>
	<%= f.text_field :hours %>

	<%= f.label :minutes %>
	<%= f.text_field :minutes %>

	<%= f.label :comments %>
	<%= f.text_area :comments, rows: 3, cols: 40 %>

	<%= f.submit(@entry.new_record? ? 'Create Entry' : 'Update Entry') %>
<% end %>

<%= link_to "Cancel", project_entries_path(@project), title: "Cancel" %>