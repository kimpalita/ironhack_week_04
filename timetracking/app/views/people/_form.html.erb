<% if @person.errors.any? %>
	<ul>
		<% @person.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>	
	</ul>
<% end %>

<%= form_for [@person] do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.submit('Save') %>
<% end %>

<%= link_to "Cancel", people_path, title: "Cancel" %>